<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    tools:context="com.example.dell.pinnacle.activities.TestPortal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/arimo"
                android:text="It's Time To Start Quiz !!"
                android:textAlignment="center"
                android:textColor="@color/splashColor"
                android:textSize="20sp"
                android:textStyle="bold" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:id="@+id/englishQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="2dp"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/question"
                        android:id="@+id/imageViewquiz"
                        android:layout_margin="4dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="22dp"
                        android:textSize="20sp"
                        android:text="English"
                        android:layout_toRightOf="@+id/imageViewquiz"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/next"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="300dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:id="@+id/mathsQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="2dp"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/question"
                        android:id="@+id/imageViewquizone"
                        android:layout_margin="4dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="22dp"
                        android:textSize="20sp"
                        android:text="Maths"
                        android:layout_toRightOf="@+id/imageViewquizone"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/next"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="300dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:id="@+id/reasoningQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/question"
                        android:id="@+id/imageViewquiztwo"
                        android:layout_margin="4dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="22dp"
                        android:textSize="20sp"
                        android:text="Reasoning"
                        android:layout_toRightOf="@+id/imageViewquiztwo"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/next"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="300dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:id="@+id/generalScienceQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/question"
                        android:id="@+id/imageViewquizthree"
                        android:layout_margin="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="22dp"
                        android:textSize="20sp"
                        android:text="General Studies"
                        android:layout_toRightOf="@+id/imageViewquizthree"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/next"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="300dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
