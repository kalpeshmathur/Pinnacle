<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashColor"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:orientation="vertical"
    tools:context="com.example.dell.pinnacle.fragments.Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/btnclr"
        android:layout_marginBottom="1dp"
        android:layout_height="30dp">
        <com.tomer.fadingtextview.FadingTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:textColor="#fff"
            android:textAlignment="center"
            app:timeout="1000"
            app:texts="@array/header"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/one"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/sscourse"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="SSC Course"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/two"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/previousyearpapers"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="Previous Year Papers"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/three"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/studymaterial"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="Study Material"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:padding="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/four"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/missionssccgl"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="Mission SSC CGL/CHSL"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_margin="0dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/five"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/aao"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="AAO(Assistant Audit Officer)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:padding="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/six"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/purchase"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="Purchase"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/seven"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/studentdashboard"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="Student Dash Board"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_margin="0dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/eight"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/zerotohero"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="Tier 3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/nine"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/jobassurance"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="JobAssure"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/ten"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/testportal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="Test Portal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_margin="0dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/eleven"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/aboutuscgl"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="About SSC CGL"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/twelve"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/blog"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/splashColor"
                android:textAlignment="center"
                android:text="Blog"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/splashColor"
        android:layout_height="wrap_content">
        <ViewFlipper
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:flipInterval="2000"
            android:autoStart="true"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            >
           <!-- <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/flippereight"
                />-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/flippersix"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/flipperseven"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/flipperfour"/>

        </ViewFlipper>
    </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>