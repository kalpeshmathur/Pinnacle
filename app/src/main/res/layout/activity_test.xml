<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/whitecolorandborder"
    android:layout_height="match_parent"
    tools:context=".activities.Test">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/whitecolorandborder"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="@color/btnclr"
                    android:id="@+id/mTextField"/>
                <ImageButton
                    android:id="@+id/closeTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/splashColor"
                    app:srcCompat="@drawable/close" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English Test"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:id="@+id/testSubject"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/splashColor"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/question"
                    android:elevation="1dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:textSize="25sp"
                    android:text="@string/quiz"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ansOne"
                    android:clickable="true"
                    android:padding="10dp"
                    android:focusable="true"
                    android:layout_marginBottom="10dp"
                    android:text="Radio Waves "
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/simple_border"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ansTwo"
                    android:text="visible light waves"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"

                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/simple_border"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ansThree"
                    android:text="Sound Waves "
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/simple_border"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ansFour"
                    android:text="Gravity Waves "
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/simple_border"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>