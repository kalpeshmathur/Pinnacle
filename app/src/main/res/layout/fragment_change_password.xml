<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/colorAccent"
    android:id="@+id/r"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.dell.pinnacle.fragments.ChangePassword">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/arimo"
                android:layout_height="wrap_content"
                android:text="Change your Password Here..."
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:textSize="20sp"
                android:textColor="@color/splashColor"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="#fff"
                    android:paddingLeft="10dp"
                    app:passwordToggleEnabled="true"
                    android:layout_marginBottom="10dp"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/profileOldPassword"
                        android:backgroundTint="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:fontFamily="@font/arimo"
                        android:hint="Old Password"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="#fff"
                    android:paddingLeft="10dp"
                    app:passwordToggleEnabled="true"
                    android:layout_marginBottom="10dp"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/profileNewPassword"
                        android:backgroundTint="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:fontFamily="@font/arimo"
                        android:hint="New Password"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="#fff"
                    app:passwordToggleEnabled="true"
                    android:paddingLeft="10dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    >

                    <EditText
                        android:id="@+id/profileConfirmPassword"
                        android:layout_width="match_parent"
                        android:textColor="#fff"
                        android:fontFamily="@font/arimo"
                        android:backgroundTint="#fff"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Change"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="normal"
                    android:gravity="center_vertical"
                    android:background="@drawable/btnborder"
                    android:id="@+id/profileChangePassword"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
